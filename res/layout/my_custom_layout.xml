	        android:layout_height="wrap_content"
            android:background="@drawable/blue_box"
			app:layout_key="num8"
			android:text="8"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- stack ninth view -->

        <TextView
            android:id="@+id/num9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/green_box"
			app:layout_key="num9"
			android:text="9"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- put tenth view -->

        <TextView
            android:id="@+id/num0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/red_box"
			app:layout_key="num0"
            android:text="0"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- stack eleventh view -->

        <TextView
            android:id="@+id/clear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/blue_box"
			app:layout_key="clear"
			android:text="C"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- stack twelveth view -->

        <TextView
            android:id="@+id/enter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/green_box"
			app:layout_key="enter"
			android:text="E"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>
        
