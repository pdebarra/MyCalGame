			app:layout_key="num3"
			android:text="3"
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- put fourth view -->

        <TextView
            android:id="@+id/num4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/red_box"
