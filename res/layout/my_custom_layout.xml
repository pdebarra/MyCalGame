<?xml version="1.0" encoding="utf-8"?>
<com.example.customlayout.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.customlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- put first view to left. -->

    <com.example.customlayout.CustomInput
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- put first view -->

        <TextView
            android:id="@+id/num1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/red_box"
			app:layout_key="num1"
            android:text="1" 
			android:gravity="center"
			android:clickable="true"
			android:onClick="keypadEntry"/>

        <!-- stack second view -->

        <TextView
            android:id="@+id/num2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:background="@drawable/blue_box"
